<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopping"
    android:id="@+id/shoppingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TextView of Shopping Carts title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping Carts"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle ="bold"/>

        <!-- TextView of Cart1 Name-->
        <TextView
            android:id="@+id/cart1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"/>

        <!-- TextView of Cart2 Name-->
        <TextView
            android:id="@+id/cart2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"/>

        <!-- TextView of Cart3 Name-->
        <TextView
            android:id="@+id/cart3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"/>

        <!-- TextView of Cart4 Name-->
        <TextView
            android:id="@+id/cart4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"/>

        <!-- TextView of Cart5 Name-->
        <TextView
            android:id="@+id/cart5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"/>

        <!-- Create New Cart Button-->
        <Button
            android:id="@+id/createShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Shopping Cart"
            android:layout_gravity = "center"/>

    </LinearLayout>

</FrameLayout>