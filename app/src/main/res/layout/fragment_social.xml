<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for statistics page-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/top_bar_social"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/MainColor">

        <!-- Title for Stats-->
        <TextView
            android:id="@+id/title_text_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Social"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/top_bar_social">

        <!-- Friends -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/social_image_friends"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="5dp"
                android:background="@drawable/rounded_social_background"
                android:src="@drawable/friends" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SocialFriendsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Friends" />
                <TextView
                    android:id="@+id/SocialFriendsDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="Discover, chat, and meetup with friends" />
            </LinearLayout>
        </LinearLayout>
        <!-- Friends - End -->

        <!-- divider -->
        <View
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:background="@color/black" />

        <!-- Friend Map -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/social_image_friend_map"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="4dp"
                android:background="@drawable/rounded_social_background"
                android:src="@drawable/friend_map" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SocialFriendMapTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Friend Map" />
                <TextView
                    android:id="@+id/SocialFriendMapDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="Find your friends" />
            </LinearLayout>
        </LinearLayout>
        <!-- Friend Map - End -->

        <!-- divider -->
        <View
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:background="@color/black" />

        <!-- Bar Map -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/social_image_bar_map"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="8dp"
                android:background="@drawable/rounded_social_background"
                android:src="@drawable/bar_counter" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SocialBarMapTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Bar Map" />
                <TextView
                    android:id="@+id/SocialBarMapDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="Find local bars near you" />
            </LinearLayout>
        </LinearLayout>
        <!-- Bar Map - End -->

    </LinearLayout>
</RelativeLayout>