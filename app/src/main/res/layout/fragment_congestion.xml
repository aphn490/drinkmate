<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Congestion">

    <!-- Vertical Linear Layout that houses all of the design on the page -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TextView of the title at the top of the page -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Congestion of Your \n5 Favorite Bars"
            android:gravity="center"
            android:textSize="30dp"/>

        <!-- TextView of the description underneath the title -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on picture to remove bar as favorite"
            android:gravity="center"/>

        <!-- Space to add spacing in the LinearLayout between elements -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <!-- Horizontal Linear Layout to house the picture and name of the first bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar1layout">

            <!-- ImageView of the picture of the first bar -->
            <ImageView
                android:id="@+id/bar1image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <!-- TextView of the name of the first bar -->
            <TextView
                android:id="@+id/bar1desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <!-- Space to add spacing in the LinearLayout between elements -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Horizontal Linear Layout to house the picture and name of the second bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar2layout">

            <!-- ImageView of the picture of the second bar -->
            <ImageView
                android:id="@+id/bar2image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <!-- TextView of the name of the second bar -->
            <TextView
                android:id="@+id/bar2desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <!-- Space to add spacing in the LinearLayout between elements -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Horizontal Linear Layout to house the picture and name of the third bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar3layout">

            <!-- ImageView of the picture of the third bar -->
            <ImageView
                android:id="@+id/bar3image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <!-- TextView of the name of the third bar -->
            <TextView
                android:id="@+id/bar3desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <!-- Space to add spacing in the LinearLayout between elements -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Horizontal Linear Layout to house the picture and name of the fourth bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar4layout">

            <!-- ImageView of the picture of the fourth bar -->
            <ImageView
                android:id="@+id/bar4image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <!-- TextView of the name of the fourth bar -->
            <TextView
                android:id="@+id/bar4desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <!-- Space to add spacing in the LinearLayout between elements -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Horizontal Linear Layout to house the picture and name of the fifth bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar5layout">

            <!-- ImageView of the picture of the fifth bar -->
            <ImageView
                android:id="@+id/bar5image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <!-- TextView of the name of the fifth bar -->
            <TextView
                android:id="@+id/bar5desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <!-- Button that navigates to the Traffic Map -->
        <Button
            android:id="@+id/trafficButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Map"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>