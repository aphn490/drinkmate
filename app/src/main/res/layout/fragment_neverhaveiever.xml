<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/neverhaveiever"
    tools:context=".neverhaveiever">

    <!-- Constraint Layout that will hold all the screen's buttons and TextViews -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Picture of the game -->
        <ImageView
            android:id="@+id/neverhaveieverpic"
            android:layout_width="1000dp"
            android:layout_height="450dp"
            android:src="@drawable/neverhaveiever"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--Requirements of the game -->
        <TextView
            android:id="@+id/requirements"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:text="No requirements to play this game! The more players the better."
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neverhaveieverpic" />
        <!--Game Instructions and rules -->
        <TextView
            android:id="@+id/instructions"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:text="This one of the most simple games. Going in a circle, a person says one
thing that they have never done. An example of this could be 'Never have I ever ate ice cream.
If you have not done this you have to take a drink. This is a great way to get to know each other
and learn secrets while also having a ton of fun!"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/requirements" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>