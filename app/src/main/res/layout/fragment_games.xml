<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/more_frame"
    tools:context=".More">

    <!-- Constraint Layout that will hold all the screen's buttons and TextViews -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Button that sends you to kings cup -->
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:alpha="0"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Image of a kings cup -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/kingscup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Description of the button/image that will send you to kings cup page -->

        <!-- Button that sends you to Task Master -->

        <TextView
            android:id="@+id/desc1"
            android:layout_width="293dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:text="King's Cup"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:alpha="0"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button1" />

        <!-- Image of a task master -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/taskmaster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <!-- Description of the button/image that will send you to task master page -->

        <!-- Button that sends you to never have I ever -->

        <TextView
            android:id="@+id/desc2"
            android:layout_width="293dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="28dp"
            android:text="Task Master"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:alpha="0"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button2" />

        <!-- Image of never have I ever -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/neverhaveieverhand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <!-- Description of the button/image that will send you to never have I ever page -->

        <!-- Button that sends you to beer pong -->
        <TextView
            android:id="@+id/desc3"
            android:layout_width="293dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:text="Never Have I Ever"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:alpha="0"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button3" />

        <!-- Image of beer pong -->
        <ImageView
            android:id="@+id/image4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/beerpong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <!-- Description of the button/image that will send you to beer pong page -->
        <TextView
            android:id="@+id/desc4"
            android:layout_width="293dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:text="Beer Pong"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>